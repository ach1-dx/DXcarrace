<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DXcarrace.MainPage"
             Title="MainPage">
   <VerticalStackLayout Padding="20">
      <Image x:Name="ImageCar1"
             Source="dotnet_bot.png"
             HorizontalOptions="Start"></Image>
      <Label x:Name="LabelCar1"
             Text="Car1 info"></Label>
      <Image x:Name="ImageCar2"
             Source="dotnet_bot.png"
             HorizontalOptions="Start"></Image>
      <Label x:Name="LabelCar2"
             Text="Car2 info"></Label>
      <Button Text="RACE!"
              Clicked="Button_Clicked"
              VerticalOptions='Fill'></Button>
   </VerticalStackLayout>
</ContentPage>